<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <!-- Hier können Sie das Layout für ein Rezept-Item definieren -->
    <ImageView
        android:id="@+id/imageViewRezept"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp" />
    <!-- android:src="@drawable/your_recipe_image_placeholder" -->


    <TextView
        android:id="@+id/textViewRezeptTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewRezept"
        android:text="Rezepttitel"
        android:textSize="18sp" />

</RelativeLayout>
